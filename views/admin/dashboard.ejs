    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.s_approve').on('click', function(event) {
                event.preventDefault();
                var id = $(this).data('id');  
                var tr = $(this).closest('tr');
                var status = "Approved"    
                // var status = $(this).find(":selected").val();
                // console.log(span)
                $.ajax({
                    url: '/update_status',
                    method: 'POST',
                    data: {
                        id: id,
                        status : status
                    }
                }).done(function(result) {
                    console.log(result)
                    if (result.msg == "success") {
                        tr.find(".result1").text("Approved")
                        // $(".result1")
                        // console.log('id from ajax call is', result);
                    } else {
                        console.log('error...ajax');
                    }

                })
            });

