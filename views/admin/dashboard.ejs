                        tr.find(".result1").text("Denied")
                        // console.log('id from ajax call is', result);
                    } else {
                        console.log('error...ajax');
                    }

                })
            });

            $('.approve').on('click', function(event) {
                event.preventDefault();
                var id = $(this).data('id');  
                var tr = $(this).closest('tr');
                var status = "Approved"    
                // var status = $(this).find(":selected").val();
                console.log(id)
                $.ajax({
                    url: '/update_Fapprove',
                    method: 'POST',
                    data: {
                        id: id,
                        status : status
                    }
                }).done(function(result) {
                    console.log(result)
                    if (result.msg == "success") {
                        tr.find(".result2").text("Approved")
                        // console.log('id from ajax call is', result);
                    } else {
                        console.log('error...ajax');
                    }

                })
            });

