    <script>
        $(document).ready(function() {

            $('.edit_internship').click(function() {
                var internship_id = $(this).data('internship_id');
                var company = $(this).data('company');
                var role = $(this).data('role');
                var task = $(this).data('task');
                var experience = $(this).data('experience');
                var duration = $(this).data('duration');
                console.log(internship_id)


                $('#internship_id').val(internship_id);
                $('#company').val(company);
                $('#role').val(role);
                $('#task').val(task);
                $('#experience').val(experience);
                $('#duration').val(duration);


            });

            $('.edit_project').click(function() {
                var project_id = $(this).data('project_id');
                var p_name = $(this).data('p_name');
                var p_duration = $(this).data('p_duration');
                var description = $(this).data('description');
                var url = $(this).data('url');
                console.log(project_id)


                $('#project_id').val(project_id);
                $('#p_name').val(p_name);
                $('#p_duration').val(p_duration);
                $('#url').val(url);
                $('#description').val(description);

            });

            $('.edit_document').click(function() {
                var document_id = $(this).data('document_id');
                var d_name = $(this).data('d_name');
                var d_experience = $(this).data('d_experience');
                console.log(document_id)

                // $('#document_id').data('myval',20); //setter
                $('#document_id').val(document_id);
                $('#d_name').val(d_name);
                $('#d_experience').val(d_experience);

            });


            $('.document_delete').on('click', function(event) {
                event.preventDefault();
                const tr = $(this).closest('tr');
                const id = $(this).attr('data-id');
                $.ajax({
                    url: '/delete_document/' + id,
                    method: 'DELETE',
                    data: {
                        id: id
                    }
                }).done(function(res) {
                    if (res.success) {
                        console.log('id from ajax call is', res);
                        tr.remove();
                    } else {
                        console.log('error...ajax');
                    }

                })
            });

            $('.project_delete').on('click', function(event) {
                event.preventDefault();
                const tr = $(this).closest('tr');
                const id = $(this).attr('data-id');
                $.ajax({
                    url: '/delete_project/' + id,
                    method: 'DELETE',
                    data: {
                        id: id
                    }
                }).done(function(res) {
                    if (res.success) {
                        console.log('id from ajax call is', res);
                        tr.remove();
                    } else {
                        console.log('error...ajax');
                    }

                });

                $('.internship_delete').on('click', function(event) {
                event.preventDefault();
                const tr = $(this).closest('tr');
                const id = $(this).attr('data-id');
                $.ajax({
                    url: '/delete_internship/' + id,
                    method: 'DELETE',
                    data: {
                        id: id
                    }
                }).done(function(res) {
                    if (res.success) {
                        console.log('id from ajax call is', res);
                        tr.remove();
                    } else {
                        console.log('error...ajax');
                    }

                })
            })
            })

        });
    </script>


